{
  "name": "piskklis",

  "features": {"ghcr.io/devcontainers/features/docker-cli:1": {}},

  "mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"],

  "dockerComposeFile": "docker-compose.yml",

  "service": "devcontainer",

  "workspaceFolder": "/workspace",

  "forwardPorts": [8888, 8080, 9200, 80],

  "postCreateCommand": "git config --global --add safe.directory /workspaces/piskklis && pip install -r /workspaces/piskklis/requirements.txt && echo '# Ready to go! âœ…'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
