{
  "name": "piskklis",
  
  // Docker-CLI inside Codespace, spricht mit dem Host-Daemon
  "features": {"ghcr.io/devcontainers/features/docker-outside-of-docker:1":{}},

  "dockerComposeFile": "docker-compose.yml",

  "service": "devcontainer",

  "workspaceFolder": "/workspaces/piskklis",

  "forwardPorts": [8888, 8080, 9200, 80],

  "postCreateCommand": "git config --global --add safe.directory /workspaces/piskklis && pip install -r /workspaces/piskklis/requirements.txt && echo '# Ready to go! âœ…'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
